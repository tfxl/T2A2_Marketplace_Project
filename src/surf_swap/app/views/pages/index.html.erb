
<section 
class="d-flex h-100 text-center text-white bg-dark bg-image" 
style="background-image: url('https://images.pexels.com/photos/1753689/pexels-photo-1753689.jpeg?auto=compress&cs=tinysrgb&h=750&w=1260');  
background-position: center;
background-repeat: no-repeat;
background-size: cover;
-webkit-background-size: cover;
-moz-background-size: cover;
-o-background-size: cover;
height:100vh;">

  <div class="cover-container d-flex w-100 h-100vh p-3 mx-auto flex-column" style="height:100vh">
  
    <header class="mb-auto">
        <h3 class="float-md-start mb-0 mb-3">SurfSwap</h3>
        <% if user_signed_in? %>
          <%= render 'user_controls'%>
        <% end %>    
    </header>

    <main class="px-3">
      <h1>swap - surf - save</h1>
      <br>
      <p class="lead">The place to find surfboards, wetsuits and ocean gear. Inspired by sustainable surfing and living free </p>
      <br>
      <p class="lead">
        <a href="#learn_more" class="btn btn-lg btn-secondary fw-bold border-white bg-black">Learn more</a>
      </p>
    </main>

    <footer class="mt-auto text-white-50">
      <p>Photo taken by <a href="https://www.pexels.com/@ging-ang-861233" class="text-white">Ging Ang</a></p>
    </footer>

  </div>
       
</section>
    
<br>
<%= render 'learn_more' %>
<br>
<%= render 'faqs' %>



