<%= render 'form_header', title: form_title%>
<br>
<%= render 'layouts/nav_flash_output_E' %>


<span style="font-style: italic; font-size:0.6em; color:azure">&nbsp;&nbsp;photo by Bradley Hook (pexels.com) </span>

<section class="container contact-form row">

  <%= form_with model: @listing do |field|%>

    <div class="form-group">
      <%= field.label "Listing Title" %> 
      <%= field.text_field :header, class: "form-control", placeholder:"Please add a title *"%>
    </div>

    <div class="form-group ">
      <%= field.label "Choose a (Surf Life Saving club) suburb where you can meet to swap"%> <br>
      <%= field.collection_select :address_id, @addresses, :id, :suburb, class: "btn btn-secondary dropdown-toggle" %>
    </div>

    <div class="form-group">
      <%= field.label :meetup_date %> 
      <%= field.date_field :meetup_date, class: "form-control", placeholder:"Please add a title *"%>
    </div>

    <div class="form-group">
      <%= field.label :meetup_time %> 
      <%= field.time_field :meetup_time, value: "%H:%M%", class: "form-control", placeholder:"Please add a title *"%>
    </div>

    <div class="form-check d-flex justify-content-between" style="flex-direction:column;">
      <%= field.label "Select which board/s to list :"%> 
      <%= field.collection_check_boxes :board_ids, @boards, :id, :designer%>
    </div>     

    <div class="form-group">
      <br>
      <%= field.label :comment, placeholder: "Please add comments" %> 
      <%= field.text_area :comment, class: "form-control", placeholder: "Your Message *",  style: "width: 100%; height: 150px;"%>
    </div>


    <div class="form-group">
      <%= field.submit button_name%> 
    </div>


  <% end %>

</section>

