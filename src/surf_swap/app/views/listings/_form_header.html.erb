<section class="py-5 text-center container"
class="bg-image" 
  style="background-image: url('https://images.pexels.com/photos/111085/pexels-photo-111085.jpeg?auto=compress&cs=tinysrgb&h=750&w=1260');  
  background-position: centre;
  background-repeat: no-repeat;
  background-size: cover;
  -webkit-background-size: cover;
  -moz-background-size: cover;
  -o-background-size: cover;
  height:100%;">

  <div class="row py-lg-5">
    <div class="col-lg-6 col-md-8 mx-auto">
      <h1 class="fw-light"><%=@title%></h1>
      <br>
      <p class="lead text-muted"><%=@descriptive_line1%><br>
        <span style="font-style: italic"><%=@descriptive_line2%></span>
      </p>
      <br>
      <br>
      <p>
        
        <%= link_to "See all Listings", listings_path, class: "btn btn-dark my-2" %>
        <% if user_signed_in? %>
        <%= link_to "See my Listings", my_listings_path, class: "btn btn-dark my-2" %>
        <% end %>
        <!-- <h4>Consider a search option here</h4> -->
      </p>
    </div>
  </div>
  <span style="font-style: italic; font-size:0.6em; color:azure">&nbsp;&nbsp;photo by Bradley Hook (pexels.com) </span>
</section>
