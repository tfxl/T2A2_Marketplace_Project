<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>


  <div class="field mb-4 mt-2">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"rounded-4 p-2", placeholder:"name@example.com", style: "height:3em; width:100%"%>
  </div>

  <div class="field mb-2">
    <%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "current-password", class:"rounded-4 p-2", placeholder:"password", style: "height:3em; width:100%"%>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field mb-4 float-right">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Login", class: "w-100 mb-2 btn btn-lg rounded-4 btn-primary"%>
  </div>
  <small class="text-muted">By clicking Login, you agree to the terms of use.</small>
  <hr class="my-4">

<% end %>

