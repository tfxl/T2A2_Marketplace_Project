<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <span style="color:red"><%= render "devise/shared/error_messages", resource: resource%></span>

  <div class="field mb-4 mt-2">
    <%# f.label :first_name, for:"floatingInput" %>
    <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", class:"rounded-4 p-2", placeholder:"First Name", style: "height:3em; width:100%"%>
    <br>
    <small class="font-italic text-muted">Only made visible to another user if a swap is accepted</small> 
  </div>

  <!-- <div class="form-floating mb-3">
    <input class="form-control rounded-4" id="floatingInput" placeholder="Please provide first name only">
    <label for="floatingInput">First Name</label>
  </div> -->

  <div class="field mb-4">
    <%# f.label :phone, for:"floatingInput" %>
    <%= f.phone_field :phone, autofocus: true, autocomplete: "phone", class:"rounded-4 p-2", placeholder:"Phone Number", style: "height:3em; width:100%"%>
    <br>
    <small class="font-italic text-muted">Only made visible to another user if a swap is accepted</small> 
  </div>

  <div class="field mb-4">
    <%# f.label :email, for:"floatingInput" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"rounded-4 p-2", placeholder:"name@example.com", style: "height:3em; width:100%"%>
    <br>
    <small class="font-italic text-muted">Your email is how we maintain a unique account for you</small> 
  </div>
    
  
  <div class="field mb-4">
    <%# f.label :password %>
    <%= f.password_field :password, autocomplete: "new-password", class:"rounded-4 p-2", placeholder:"Password", style: "height:3em; width:100%"%>
    <% if @minimum_password_length %>
      <small class="font-italic text-muted">Minimum <%=@minimum_password_length%> characters, but 12 is significantly more secure</small>
    <% else %>
      <small class="font-italic text-muted">Minimum 6 characters, but 12 is significantly more secure</small>
    <%end%>
  </div>

  <div class="field mb-4">
    <%# f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"rounded-4 p-2", placeholder:"Confirm-Password", style: "height:3em; width:100%" %>
    <small class="font-italic text-muted">Please confirm password</small>
  </div>


  <div class="actions">
    <%= f.submit "Sign up", class: "w-100 mb-2 btn btn-lg rounded-4 btn-primary"%>
  </div>
  <small class="text-muted">By clicking Sign up, you agree to the terms of use.</small>
  <hr class="my-4">

<% end %>











 




